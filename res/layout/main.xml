<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bsidebprojects.hunthelper.MainActivity"
    tools:ignore="MergeRootFrame" 
    android:orientation="vertical">

    <TextView
        android:id="@+id/startHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's go" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/start0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start-0"
            android:onClick="click"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/start1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start-1"
            android:onClick="click"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start-2"
            android:onClick="click"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/helpoutsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helpouts Cam" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/help0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="help-0"
            android:onClick="click"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/help1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="help-1"
            android:onClick="click"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/help2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="help-2"
            android:onClick="click"
            android:layout_weight="1"/>

    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/serverHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server corridor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/server0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="server-0"
            android:onClick="click"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/server1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="server-1"
            android:onClick="click"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/server2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="server-2"
            android:onClick="click"
            android:layout_weight="1"/>

    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/fitnessHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/fitness0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fitness-0"
            android:onClick="click"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/fitness1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fitness-1"
            android:onClick="click"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/fitness2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fitness-2"
            android:onClick="click"
            android:layout_weight="1"/>

    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/scottHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Physical Web" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/scott0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scott-0"
            android:onClick="click"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/scott1"
